@model IEnumerable<class3.Models.Article>

@{
    ViewData["Title"] = "Welcome to my Article";
}
<h1>@ViewData["Title"]</h1>
<hr />
@foreach (var article in Model)
{
<h3>@article.Title</h3>
<h4> Author Name: @article.Author at @article.Datecreated</h4>
<p>Body @article.Body</p>
}